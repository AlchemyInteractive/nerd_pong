<main role="main">
  <div class="top-nav">
      <ul>
        <li class="active">1st Round</li>
        <% if @game.bracket[2] %>
            <li class="active">2nd Round</li>
        <% else %>
            <li>2nd Round</li>
        <% end %>
        <% if @game.bracket[3] %>
            <li class="active">Final Round</li>
        <% else %>
            <li>Final Round</li>
        <% end %>
      </ul>
    </div>
  <div class="bracket" id=<%="#{@game.id}"%>>
    <div class="roundone">
  <% @game.bracket[1].each do |p| %>
  <ul>
    <div class="player-box">
      <li>
        <% if p[0] %>
          <%= image_tag(p[0].profile_image, class: 'profile-pic profile-pic-1') %><br>
          <%=p[0].name %>
        <% end %>
      </li>
      <li class="vs">VS.</li>
      <li>
        <% if p[1] %>
          <%= image_tag(p[1].profile_image, class: 'profile-pic profile-pic-2') %><br>
          <%=p[1].name %>
        <% end %>
      </li>
    </div>
  </ul>

  <!-- Modal Begin -->
  <div class="modal-wrapper">
    <div class="modal-bg"></div>
    <div class="modal">
      <span class="close-modal">X</span>
      <span id="table">TABLE A</span>
      <div class="modal-player-box">
        <% if p[0] %>
        <div class="modal-player modal-player-1" id=<%="#{p[0].id}"%>>
            <%= image_tag(p[0].profile_image, class: 'profile-pic profile-pic-1') %>
            <span class="player-name"><%=p[0].name %></span>
            <span class="player-score"><%=p[0].game_wins %> - <%=p[0].game_losses %></span>
        </div>
        <% end %>
        <span id="modal-vs">VS</span>
        <% if p[1] %>
        <span class="modal-player modal-player-2" id=<%="#{p[1].id}"%>>
            <%= image_tag(p[1].profile_image, class: 'profile-pic profile-pic-2') %>
            <span class="player-name"><%=p[1].name %></span>
            <span class="player-score"><%=p[1].game_wins %> - <%=p[1].game_losses %></span>
        </span>
        <% end %>
      </div>
      <div class="modal-player-score">
        <span id="final">FINAL SCORE</span>  
        <form> 
          <ul>
            <li><input class="input-fields" type="text" name="player1"> </li>
            <li><span>to</span></li>
            <li><input class="input-fields" type="text" name="player2"></li>
          </ul>
          <input id="input-submit" type="submit" value="SAVE SCORE"> 
        </form>
      </div>
    </div>
  </div>
  <!-- Modal End -->

  <% end %>
  </div>
    <div class="roundtwo">
  <% if @game.bracket[2] %>
  <% @game.bracket[2].each do |p| %>
  <ul>
    <div class="player-box">
      <li>
        <% if p[0] %>
          <%= image_tag(p[0].profile_image, class: 'profile-pic profile-pic-1') %><br>
          <%=p[0].name %>
        <% end %>
      </li>
      <li class="vs">VS.</li>
      <li>
        <% if p[1] %>
          <%= image_tag(p[1].profile_image, class: 'profile-pic profile-pic-2') %><br>
          <%=p[1].name %>
        <% end %>
      </li>
    </div>
  </ul>

  <div class="modal-wrapper">
    <div class="modal-bg"></div>
    <div class="modal">
      <span class="close-modal">X</span>
      <span id="table">TABLE A</span>
      <div class="modal-player-box">
        <% if p[0] %>
        <span class="modal-player modal-player-1" id=<%="#{p[0].id}"%>>
            <%= image_tag(p[0].profile_image, class: 'profile-pic profile-pic-1') %><br>
            <%=p[0].name %><br>
            <%=p[0].game_wins %> - <%=p[0].game_losses %>
        </span>
        <% end %>
        <span id="modal-vs">VS</span>
        <% if p[1] %>
        <span class="modal-player modal-player-2" id=<%="#{p[1].id}"%>>
            <%= image_tag(p[1].profile_image, class: 'profile-pic profile-pic-2') %><br>
            <%=p[1].name %><br>
            <%=p[1].game_wins %> - <%=p[1].game_losses %>
        </span>
        <% end %>
      </div>
      <div class="modal-player-score">
        <span id="final">FINAL SCORE</span>  
        <form> 
          <input class="input-fields" type="text" name="player1"> 
          <span>to</span>
          <input class="input-fields" type="text" name="player2"><br> 
          <input id="input-submit" type="submit" value="SAVE SCORE"> 
        </form>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
  </div>
  </div>
</main>
<script>
$(document).ready(function() {
  $('.player-box').on('click', function(index){
      var index = $('.player-box').index(this);
      var $modal = $($('.modal-wrapper')[index]);
      console.log("hi")
      $modal.fadeIn(250);
      $modal.find('.modal').fadeIn(250);
      $modal.find('.modal-bg').fadeIn(250);
  });
  
  $('.close-modal').on('click', function(){
    var $modal = $(this).parent().parent();
    $modal.fadeOut(250);
    $modal.find('.modal').fadeOut(250);
    $modal.find('.modal-bg').fadeOut(250);
  });
  
  $('form').on('submit', function(e){
    e.preventDefault();
    var index = $('form').index(this);
    var playerOneId = $($('.modal-player-1')[index]).attr('id'); 
    var playerTwoId = $($('.modal-player-2')[index]).attr('id'); 
    var p1Score = $($('input[name=player1')[index]).val();
    var p2Score = $($('input[name=player2')[index]).val();
    var bracket = $('.bracket').attr('id'); 
    var params = {data:{bracketId: bracket, playerOne:{id: playerOneId, score: p1Score}, playerTwo:{id: playerTwoId, score: p2Score }}};
    $.ajax({
      url: '/save_score',
      type: 'POST',
      beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
      data: params,
      success: function(data){
        alert(data);
      }
    }) 
  }); 
});
</script>