            <%= image_tag(p[1].profile_image, class: 'profile-pic profile-pic-2') %>
            <span class="player-name"><%=truncate p[1].name, length: 12, separator: /\w/, omission: "..."%></span>
            <span class="player-score"><%=p[1].game_wins %> - <%=p[1].game_losses %></span>
        </span>
        <% end %>
      </div>
      <div class="modal-player-score">
        <span class="final">FINAL SCORE</span>  
        <form> 
          <ul>
            <li><input class="input-fields" type="text" name="player1"> </li>
            <li><span>to</span></li>
            <li><input class="input-fields" type="text" name="player2"></li>
          </ul>
          <input id="input-submit" type="submit" value="SAVE SCORE"> 
