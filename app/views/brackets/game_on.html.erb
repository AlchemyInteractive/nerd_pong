<script>
$(document).ready(function() {
  $('.player-box').on('click', function(index){
      var index = $('.player-box').index(this);
      var $modal = $($('.modal-wrapper')[index]);
      $modal.fadeIn(250);
      $modal.find('.modal').fadeIn(250);
      $modal.find('.modal-bg').fadeIn(250);
  });
  
  $('.close-modal').on('click', function(){
    var $modal = $(this).parent().parent();
    $modal.fadeOut(250);
    $modal.find('.modal').fadeOut(250);
    $modal.find('.modal-bg').fadeOut(250);
  });
  
  $('form').on('submit', function(e){
    e.preventDefault();
    if ($('.roundone').has(this).length > 0){   
      var round = 1;   
    } else if ($('.roundtwo').has(this).length > 0){   
      var round = 2;   
    } else if ($('.roundfinal').has(this).length > 0){   
      var round = 3;   
    } else if ($('.champion').has(this).length > 0){    
      var round = 4;   
    }
    var index = $('form').index(this);
    var playerOneId = $($('.modal-player-1')[index]).attr('id'); 
    var playerTwoId = $($('.modal-player-2')[index]).attr('id'); 
    var p1Score = $($('input[name=player1')[index]).val();
    var p2Score = $($('input[name=player2')[index]).val();
    var bracket = $('.bracket').attr('id'); 
    var params = {data:{bracketId: bracket, curr_round: round, playerOne:{id: playerOneId, score: p1Score}, playerTwo:{id: playerTwoId, score: p2Score }}};
    $.ajax({
      url: '/save_score',
      type: 'POST',
      beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
      data: params,
      success: function(data){
        $.each($('.modal-wrapper'), function(i, val){
          $(val).fadeOut(250); 
          $(val).find('.modal').fadeOut(250);
          $(val).find('.modal-bg').fadeOut(250);
        });
        $('body').fadeOut(250).load(location.href).fadeIn(250);
        var winner = data["winner"];
      },
      error: function(data){
        console.log(data);
      }
    }) 
  }); 
});
</script>
