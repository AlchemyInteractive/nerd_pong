          <li class="active">Champion</li>
      <% else %>
          <li>Champion</li>
      <% end %>
      </ul>
    </div>
  <div class="bracket" id=<%="#{@game.id}"%>>
    <div class="roundone">
  <% @game.bracket[1].each_with_index do |p, index| %>
  <ul>
    <div class="player-box">
      <li>
        <% if p[0] %>
          <%= image_tag(p[0].profile_image, class: 'profile-pic profile-pic-1') %><br>
          <%= truncate p[0].name, length: 12, separator: /\w/, omission: "..." %>
        <% end %>
      </li>
      <% if index % 2 == 0 %>
        <li class="vs">Table A</li>
      <% else %>
        <li class="vs">Table B</li>
      <% end %>
      <li>
        <% if p[1] %>
          <%= image_tag(p[1].profile_image, class: 'profile-pic profile-pic-2') %><br>
          <%= truncate p[1].name, length: 12, separator: /\w/, omission: "..." %>
        <% end %>
      </li>
    </div>
  </ul>

  <!-- Modal Begin -->
  <div class="modal-wrapper">
    <div class="modal-bg"></div>
    <div class="modal">
      <span class="close-modal">X</span>
